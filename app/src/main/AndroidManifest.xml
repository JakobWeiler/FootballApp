<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="at.footballapp.captainandroid.footballapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".pkgGUI.LoginActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".pkgGUI.RemovePlayerActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".pkgGUI.RemoveMatchActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".pkgGUI.UpdateMatchActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".pkgGUI.EditTeamActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".pkgGUI.StatisticActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".pkgGUI.MatchActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".pkgGUI.ProfileActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".pkgGUI.MainActivity"
            android:label="@string/title_activity_main"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".pkgGUI.AddPlayerActivity"
            android:theme="@android:style/Theme.Dialog" />

    </application>

</manifest>