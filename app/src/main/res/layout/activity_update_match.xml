<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="at.footballapp.captainandroid.footballapp.pkgGUI.UpdateMatchActivity"
    style="@style/background">

    <Button
        android:id="@+id/btnStatistic"
        style="@style/buttons"
        android:layout_width="97dp"
        android:layout_height="50dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="120dp"
        android:onClick="onBtnStatistic"
        android:text="@string/Statistic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText4"
        app:layout_constraintVertical_bias="0.433"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:textAlignment="center"
        android:gravity="center"
        android:layout_width="166dp"
        android:layout_height="44dp"
        android:layout_marginLeft="34dp"
        android:layout_marginTop="8dp"
        android:text="@string/Score1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/datePicker"
        style="@style/textViews"/>

    <DatePicker
        android:id="@+id/datePicker"
        android:datePickerMode="spinner"
        android:calendarViewShown="false"
        android:layout_width="265dp"
        android:layout_height="175dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        />

    <Button
        android:id="@+id/btnEditTeam"
        style="@style/buttons"
        android:layout_width="97dp"
        android:layout_height="50dp"
        android:onClick="onBtnEditTeam"
        android:text="@string/Edit"
        android:layout_marginTop="120dp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.433"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:textAlignment="center"
        android:gravity="center"
        android:layout_width="166dp"
        android:layout_height="44dp"
        android:text="@string/Score2"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="34dp"
        style="@style/textViews"/>

    <Button
        android:id="@+id/btnSave"
        style="@style/buttons"
        android:layout_width="97dp"
        android:layout_height="50dp"
        android:onClick="onBtnSave"
        android:text="@string/Save"
        app:layout_constraintLeft_toRightOf="@+id/btnEditTeam"
        android:layout_marginLeft="8dp"
        app:layout_constraintRight_toLeftOf="@+id/btnStatistic"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/datePicker"
        app:layout_constraintVertical_bias="0.933" />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="60dp"
        android:layout_height="44dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="number"
        android:textColor="#FFFFFF"
        app:layout_constraintHorizontal_bias="0.066"
        app:layout_constraintLeft_toRightOf="@+id/textView2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/datePicker" />

    <EditText
        android:id="@+id/editText4"
        android:layout_width="60dp"
        android:layout_height="44dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="number"
        android:textColor="#FFFFFF"
        app:layout_constraintHorizontal_bias="0.066"
        app:layout_constraintLeft_toRightOf="@+id/textView"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText3" />
</android.support.constraint.ConstraintLayout>
