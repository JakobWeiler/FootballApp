<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="at.footballapp.captainandroid.footballapp.pkgGUI.MainActivity"
    tools:showIn="@layout/app_bar_main"
    style="@style/background">

    <Spinner
        android:id="@+id/spPlayer"
        android:layout_width="380dp"
        android:layout_height="42dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="112dp"
        android:background="#FFFFFF"
        android:longClickable="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.497" />

    <Spinner
        android:id="@+id/spMatch"
        android:layout_width="380dp"
        android:layout_height="42dp"
        android:layout_marginBottom="212dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:background="#FFFFFF"
        android:longClickable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spPlayer"
        app:layout_constraintVertical_bias="0.592"
        app:layout_constraintHorizontal_bias="0.497" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="20dp"
        android:layout_height="21dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:background="#B50D03"
        app:layout_constraintBottom_toBottomOf="@+id/spMatch"
        app:layout_constraintHorizontal_bias="0.982"
        app:layout_constraintLeft_toLeftOf="@+id/spMatch"
        app:layout_constraintRight_toRightOf="@+id/spMatch"
        app:layout_constraintTop_toTopOf="@+id/spMatch"
        app:srcCompat="@android:drawable/arrow_down_float" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="20dp"
        android:layout_height="21dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:background="#B50D03"
        app:layout_constraintBottom_toBottomOf="@+id/spPlayer"
        app:layout_constraintHorizontal_bias="0.982"
        app:layout_constraintLeft_toLeftOf="@+id/spPlayer"
        app:layout_constraintRight_toRightOf="@+id/spPlayer"
        app:layout_constraintTop_toTopOf="@+id/spPlayer"
        app:layout_constraintVertical_bias="0.2"
        app:srcCompat="@android:drawable/arrow_down_float" />

</android.support.constraint.ConstraintLayout>
